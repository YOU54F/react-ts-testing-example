{
  "name": "react-ts-testing-example",
  "version": "0.1.0",
  "private": true,
  "author": "YOU54F",
  "email": "yousafn@gmail.com",
  "repository": "https://github.com/YOU54F/react-ts-testing-example",
  "dependencies": {
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "formik": "1.5.2",
    "jest-enzyme": "7.0.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router-dom": "5.0.0",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cypress": "cypress run  --env configFile=ci",
    "test:cypress:dev": "cypress open --env configFile=development",
    "test:coverage": "react-scripts test --coverage --reporters=default --reporters=jest-junit --reporters=jest-stare",
    "test:ci": "start-server-and-test start http://localhost:3000 test:cypress",
    "test:dev": "start-server-and-test start http://localhost:3000 test:cypress:dev",
    "eject": "react-scripts eject",
    "lint-ts": "tslint --project .",
    "lint-css": "stylelint ./src/**/**/*.css",
    "lint-caniuse": "eslint ./build/**/**/**.js",
    "lint-compat": "compat",
    "lint": "npm-run-all lint-ts lint-css lint-caniuse lint-compat"
  },
  "lint-staged": {
    "linters": {
      "*.css": [
        "prettier --write",
        "stylelint",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "warn"
    },
    "settings": {
      "polyfills": [
        ""
      ]
    }
  },
  "prettier": {
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true,
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest-stare": {
    "coverageLink": "../lcov-report/index.html",
    "resultDir": "coverage/html"
  },
  "jest-junit": {
    "reportDir": "testReports/unit"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.0.3",
    "@slack/client": "4.10.0",
    "@types/enzyme": "3.9.0",
    "@types/jest": "24.0.9",
    "@types/node": "11.10.4",
    "@types/react": "16.8.6",
    "@types/react-dom": "16.8.2",
    "@types/react-router-dom": "4.3.1",
    "@types/react-test-renderer": "16.8.1",
    "aws-sdk": "2.413.0",
    "compat-cli": "0.1.3",
    "cypress": "3.1.5",
    "cypress-cucumber-preprocessor": "1.9.1",
    "cypress-failed-log": "2.4.1",
    "cypress-testing-library": "2.3.4",
    "eslint-plugin-compat": "2.7.0",
    "husky": "1.3.1",
    "jest-html-reporter": "2.4.4",
    "jest-junit": "6.3.0",
    "jest-stare": "1.12.1",
    "lint-staged": "8.1.5",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.18.0",
    "mocha-multi-reporters": "1.1.7",
    "mochawesome": "3.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "react-test-renderer": "16.8.3",
    "shelljs": "0.8.3",
    "sonarqube-scanner": "2.4.0",
    "start-server-and-test": "1.7.11",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-no-unsupported-browser-features": "3.0.2",
    "ts-jest": "24.0.0",
    "ts-loader": "5.3.3",
    "tslint": "5.13.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.3333",
    "uuid": "3.3.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false
  }
}
