{
  "name": "example-website",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "^24.0.4",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-dom": "^4.3.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "lint-ts": "tslint --project .",
    "lint-scss": "stylelint ./src/**/**/*.css",
    "lint-caniuse": "eslint ./build/**/**/**.js",
    "lint-compat": "compat",
    "lint": "npm-run-all lint-ts lint-scss lint-caniuse lint-compat"
  },
  "lint-staged": {
    "linters": {
      "*.scss": [
        "prettier --write",
        "stylelint",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "warn"
    },
    "settings": {
      "polyfills": [
        ""
      ]
    }
  },
  "prettier": {
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true,
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest-junit": {
    "outputDirectory": "./testReports/",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "jest-stare": {
    "coverageLink": "../lcov-report/index.html",
    "resultDir": "coverage/html"
  },
  "devDependencies": {
    "@types/react-test-renderer": "^16.8.1",
    "compat-cli": "^0.1.3",
    "eslint-plugin-compat": "^2.7.0",
    "husky": "^1.1.2",
    "jest-html-reporter": "^2.4.2",
    "jest-junit": "^6.3.0",
    "jest-stare": "^1.8.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.8.3",
    "stylelint": "^9.7.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  }
}
